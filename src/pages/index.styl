@import "../colors"

html
  font-size 16px
  font-family"PT Sans", "Arial", sans-serif
  font-weight 400
  color $black
  background-color $white

  @media (min-width 1025px) and (max-width 1115px)
    font-size 15px

  @media (min-width 801px) and (max-width 1024px)
    font-size 11px

  @media (min-width 651px) and (max-width 800px)
    font-size 8px
