$icon_color = #0071bb
$text_color = #3d6cb0

.block-header
    display: flex
    align-items: center
    height: 5.625rem    

    &__picture
        position: relative        
        border-radius: 50%
        background-color: #ffffff
        border: 1px solid $icon_color
        width: 4.8125rem
        height: 4.8125rem
        margin-right: 0.75rem       

    &__picture::after
        position: absolute
        content: ''
        display: block
        border-radius: 50%
        background-color: $icon_color        
        width: 4.4375rem
        height: 4.4375rem
        top: 0.1875rem
        left: 0.1875rem 
        background-size: 115%
        background-position: center  

    &__title 
        font-size: 2.8125rem
        text-transform: uppercase
        color: $text_color 
        font-family: "PTSansBold"
        margin-right: 0.6875rem    

    &__line
        height: 0.3125rem        
        background-color: $text_color
        flex-grow: 1