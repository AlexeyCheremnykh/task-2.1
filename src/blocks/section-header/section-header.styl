@import "../../colors"

.section-header
  display flex
  align-items center
  height 5.625rem

  &__picture-container
    position relative
    border-radius 50%
    background-color $white
    border 1px solid $secondary-blue
    width 4.875rem
    height 4.875rem
    margin-right 0.75rem

  &__picture
    position absolute
    border-radius 50%
    background-color $secondary-blue
    width 4.4375rem
    height 4.4375rem
    top 50%
    left 50%
    transform translate(-50%, -50%)
    background-size 115%
    background-position center

    &_profile
      background-image url("../profile/profile-icon.png")

    &_contact
      background-image url("../contact/contact-icon.png")

    &_skills
      background-image url("../skills/skills-icon.png")

    &_education
      background-image url("../education/education-icon.png")

    &_experience
      background-image url("../experience/experience-icon.png")

    &_software
      background-image url("../software/software-icon.png")

  &__title
    font-size 2.8125rem
    text-transform uppercase
    color $main-blue
    margin-right 0.6875rem
    max-width 16rem
    max-height 2.5rem
    overflow hidden

  &__line
    height 0.3125rem
    background-color $main-blue
    flex-grow 1
