$picture_color = #3d6cb0

html 
    font-size: 16px

.main-info
    &__picture
        position: relative
        border-radius: 50%
        background-color: #ffffff
        border: 1px solid $picture_color
        width: 55%
        padding-top: 55%            
        margin-top: 88.67px
        margin-left: 115.67px

    &__picture::after
        position: absolute
        content: ''
        display: block
        border-radius: 50%
        background-color: $picture_color
        width: 88.1423%
        padding-top: 88.1423%
        top: 5.9289%
        left: 5.9289%        

    &__text-wrapper
        margin-left: 60px
        margin-top: 5px

    &__text
        width: 85.765% 
        font-family: "PTSansBold"               
        text-align: center
        text-transform: uppercase      

    &__name
        font-size: 3.75rem
        font-family: "PTSansRegular"
        margin-left: 30px        
        padding-top: 15px

    &__surname
        font-size: 4.5rem
        margin-top: -26px
        margin-left: 20px
        
    &__vacancy
        font-size: 1.6875rem  
        margin-top: -5px
        margin-left: 25px  