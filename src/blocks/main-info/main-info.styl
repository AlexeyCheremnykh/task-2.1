$picture_color = #3d6cb0

html 
    font-size: 16px

.main-info    
    &__picture
        position: relative
        border-radius: 50%
        background-color: #ffffff
        border: 1px solid $picture_color
        width: 55%
        padding-top: 55%            
        margin-top: 88.67px
        margin-left: 115.67px

    &__picture::after
        position: absolute
        content: ''
        display: block
        border-radius: 50%
        background-color: $picture_color
        width: 88.1423%
        padding-top: 88.1423%
        top: 5.9289%
        left: 5.9289%        

    /*&__text-wrapper        
        margin-left: 60px
        margin-top: 5px*/

    &__text
        width: 85.765% 
        font-family: "PTSansBold"               
        text-align: center
        text-transform: uppercase
        margin-left: 45px
        margin-top: 20px     

    &__name
        font-size: 3.75rem
        font-family: "PTSansRegular"      

    &__surname
        font-size: 4.4rem
        line-height: 0.6em       
        
    &__vacancy
        font-size: 1.6875rem  
        line-height: 2.8em

@media (max-width: 1340px)
    .main-info
        &__name
            font-size: 3.5rem
        &__surname
            font-size: 4.2rem
        &__vacancy
            font-size: 1.575rem
        

@media (max-width: 1280px)
    .main-info
        &__name
            font-size: 2.48rem
        &__surname
            font-size: 3rem
        &__vacancy
            font-size: 1.125rem