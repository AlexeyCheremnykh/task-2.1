$blue = #3d6cb0

.main-info__picture 
    border-radius: 50%
    background-color: $blue
    width: 407px
    height: 407px
    box-shadow: 0 0 0 27px #fff,
                0 0 0 30px $blue
    margin: 175px auto 100px

.main-info__text
    margin-left: auto
    margin-right: auto
    text-align: center
    text-transform: uppercase

.main-info__name
    font-size: 104.49px

.main-info__surname
    font-size: 123.45px

.main-info__vacancy
    font-size: 49.97px