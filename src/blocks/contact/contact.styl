$text_color = #3d6cb0

.contact 
    .block-header__picture
        background-image: url("contact_icon.png")    
       
    margin-top: 37px
    margin-left: 3px
    &__dl
        padding-top: 13px
        padding-left: 3px       

    &__dt,
    &__dd
        font-size: 1.4375rem
        padding-bottom: 31px
        &:last-child
            padding-bottom: 30px    

    &__dt
        float: left     
        color: $text_color
        text-transform: uppercase
        font-family: "PTSansBold"                
    
    &__dd
        font-family: "PTSansRegular"
        padding-left: 100px       
        