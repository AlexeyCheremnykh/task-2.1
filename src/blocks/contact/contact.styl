$text_color = #3d6cb0

.contact

    .block-header__picture::after
        background-image: url("contact_icon.png")    

    &__dl
        padding-top: 13px               

    &__dt,
    &__dd
        font-size: 1.4375rem
        padding-bottom: 31px  

    &__dt
        float: left     
        color: $text_color
        text-transform: uppercase
        font-family: "PTSansBold"                
    
    &__dd
        font-family: "PTSansRegular"
        padding-left: 100px    

    @media (min-width: 641px) and (max-width: 1024px)
        .contact
            &__dt,
            &__dd
                font-size: 1.1rem

