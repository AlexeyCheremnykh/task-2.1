.cv
  max-width 1640px

  @media (min-width 1641px)
    margin-left auto
    margin-right auto

  &::after
    content ""
    display block
    clear both

  &__column-left
    box-sizing border-box
    width 38.6%
    padding-top 89px
    float left
    padding-left 3.75rem

    @media (max-width 650px)
      width 80%
      padding-left 0
      float none
      margin-left auto
      margin-right auto

  &__column-right
    box-sizing border-box
    width 61.4%
    float right
    padding-left 5.25rem
    padding-top 70px
    padding-right 2.3125rem

    @media (max-width 650px)
      width 80%
      padding 0
      float none
      margin-left auto
      margin-right auto
