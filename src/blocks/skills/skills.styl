$blue = #3d6cb0

.skills
    margin-top: 15px
    margin-left: 2px    

    .block-header
        height: 75px

    &__all-skills
        text-align: center
        border: 1px solid blue

    &__title
        font-size: 28.33px
        text-transform: uppercase
        font-family: "PTSansRegular"        

    &__score
        width: 19.03px
        height: 19.03px
        border-radius: 50%
        background-color: $blue
        box-shadow: 19.03px 0 0 0 $blue