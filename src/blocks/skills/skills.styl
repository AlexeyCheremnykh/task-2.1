$blue = #3d6cb0

.skills
    .block-header__picture
        background-image: url("skills_icon.png")

    margin-top: 19px
    margin-left: 3px
    clear: both    

    &__all-skills
        text-align: center       

    &__title
        font-size: 28.33px
        text-transform: uppercase
        font-family: "PTSansRegular"
        padding-left: 9px
        margin-bottom: 10px        

    &__score
        width: 19.03px
        height: 19.03px
        border-radius: 50%
        background-color: $blue
        box-shadow: 30px 0 0 0 $blue,
                    59px 0 0 0 $blue,
                    89px 0 0 0 $blue,
                    119px 0 0 0 $blue,
                    152px 0 0 0 $blue,
                    182px 0 0 0 $blue,
                    212px 0 0 0 $blue,
                    242px 0 0 0 $blue,
                    272px 0 0 0 #e6e6e6,
                    304px 0 0 0 #e6e6e6,
                    334px 0 0 0 #e6e6e6                    
        margin-left: 53px
        margin-bottom: 18px