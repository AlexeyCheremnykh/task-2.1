$blue = #3d6cb0

.skills
    margin-top: 15px
    margin-left: 2px
    clear: both    

    &__all-skills
        text-align: center
        border: 1px solid blue        

    &__title
        font-size: 28.33px
        text-transform: uppercase
        font-family: "PTSansRegular"
        padding-left: 10px
        margin-bottom: 10px        

    &__score
        width: 19.03px
        height: 19.03px
        border-radius: 50%
        background-color: $blue
        box-shadow: 30px 0 0 0 $blue,
                    59px 0 0 0 $blue,
                    89px 0 0 0 $blue,
                    119px 0 0 0 $blue,
                    152px 0 0 0 $blue,
                    182px 0 0 0 $blue,
                    212px 0 0 0 $blue,
                    242px 0 0 0 $blue,
                    272px 0 0 0 #e6e6e6,
                    304px 0 0 0 #e6e6e6,
                    334px 0 0 0 #e6e6e6                    
        margin-left: 53px
        margin-bottom: 18px