@import "../../colors"

.info-with-period
  &__header
    padding-left 0.125rem

  &__title
    font-size 1.75rem
    margin 0
    font-weight 700
    text-transform uppercase
    word-break break-word

    &_blue
      color $main-blue

  &__period
    text-transform none
    color $black
    font-weight 400
    margin-left 1.25rem

  &__subtitle
    font-size 1.75rem
    text-transform uppercase
    word-break break-word

  &__content
    margin 0
    padding 0.3125rem 1.375rem 0 0.1875rem
